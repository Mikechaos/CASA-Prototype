!!! XML
!!! 1.1
%html(xmlns="http://www.w3.org/1999/xhtml")
	%head
		%meta(http-equiv="Content-Type" content="text/html; charset=utf-8" )
		%meta(http-equiv="expires" content="0" )
		%meta(http-equiv="Content-Script-Type" content="text/javascript" )
		%meta(http-equiv="Content-Style-Type" content="text/css" )
		%meta(http-equiv="X-UA-Compatible" content="IE=8")
		%meta(name="author" content="MyAppAuthor")
		%link(rel="icon" type="image/png" href="/favicon.png")
		%title= @title
		- if settings.css_files == :blob
			%link(type="text/css" rel="stylesheet" href="/blob.css?modified=#{File.mtime('public/blob.css').to_i}" )
		- else
			- settings.css_files.each do |css|
				%link(type="text/css" rel="stylesheet" href="/css/#{css}" )
		- if settings.js_files == :blob
			%script(type="text/javascript" src="/blob.js?modified=#{File.mtime('public/blob.js').to_i}")
		- else
			- settings.js_files.each do |js|
				%script(type="text/javascript" src="/js/#{js}")
	%body{id:@action}
		.navbar
			.navbar-inner
				%a.brand{:href => "/"}= @title
				%ul.nav 
					%li.dropdown
						%a{:href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"}
							Réglages
							%b.caret
						%ul.dropdown-menu
							%li 
								%a{:href => "/employees"}= "Employés" 
		.container
			.row
				.span12
					= yield
		%script(type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
		%script(type="text/javascript" src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.4/angular.min.js")
		%script(type="text/javascript" src="/js/bootstrap.min.js?v=#{File.mtime('public/js/bootstrap.min.js').to_i}")
		%script(type="text/javascript" src="/js/app.js?v=#{File.mtime('public/js/app.js').to_i}")
		%script(type="text/javascript" src="/js/services.js?v=#{File.mtime('public/js/services.js').to_i}")
		%script(type="text/javascript" src="/js/controllers.js?v=#{File.mtime('public/js/controllers.js').to_i}")
		%script(type="text/javascript" src="/js/filters.js?v=#{File.mtime('public/js/filters.js').to_i}")
		%script(type="text/javascript" src="/js/directives.js?v=#{File.mtime('public/js/directives.js').to_i}")

